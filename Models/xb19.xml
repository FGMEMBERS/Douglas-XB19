    </emission>
<!--
    <shininess>
      <shininess-prop>shininess</shininess-prop>
    </shininess>
-->
  </animation>

  <!-- Rentré des roues Temporairement disparition/apparition des roues -->
  <animation>
    <type>select</type>
    <object-name>roueA</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <condition>
      <not>
        <equals>
          <property>gear/gear[0]/position-norm</property>
          <value> 0 </value>
        </equals>
      </not>
    </condition>
  </animation>

  <!-- Intérieur -->
  <model>
    <path>Aircraft/Douglas-XB19/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- Les moteurs -->
  <!-- Extérieur gauche -->
  <model>
    <path>Aircraft/Douglas-XB19/Models/Engines/engine.xml</path>
    <offsets>
      <x-m> -10.845 </x-m>
      <y-m> -10.281 </y-m>
      <z-m>  -2.004 </z-m>
    </offsets>
  </model>

  <!-- Intérieur gauche -->
  <model>
    <path>Aircraft/Douglas-XB19/Models/Engines/engine.xml</path>
    <offsets>
      <x-m> -12.202 </x-m>
      <y-m>  -4.831 </y-m>
      <z-m>  -2.392 </z-m>
    </offsets>
  </model>

  <!-- Intérieur droit -->
  <model>
    <path>Aircraft/Douglas-XB19/Models/Engines/engine.xml</path>
